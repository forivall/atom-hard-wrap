{
  "name": "hard-wrap",
  "main": "./lib/hard-wrap",
  "version": "1.0.1",
  "description": "Hard wraps (aka autoflow) your text; works with multi-wrap-guide",
  "keywords": [
    "wrap",
    "autoflow"
  ],
  "activationCommands": {
    "atom-text-editor": "hard-wrap:reflow-selection"
  },
  "repository": "https://github.com/forivall/atom-hard-wrap",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "repeating": "^2.0.0",
    "underscore-plus": "^1.6.6"
  },
  "devDependencies": {
    "babel": "^5.8.35",
    "babel-eslint": "^4.1.6",
    "eslint": "^1.10.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint"
  },
  "babel": {
    "stage": 2,
    "optional": [
      "optimisation.flow.forOf"
    ]
  }
}
